{
	"name": "cypress-padronizacao",
	"version": "1.0.0",
	"description": "Exemplo de suíte Cypress padronizada com E2E + API, relatórios mochawesome e paralelização.",
	"main": "index.js",
	"scripts": {
		"test": "cypress open",
		"test:headless": "cypress run 2>/dev/null",
		"test:headless:login": "npx cypress run 2>/dev/null --env grepTags='@login'",
		"test:headless:quotation": "npx cypress run 2>/dev/null --env grepTags='@quotation'",
		"list:spec:names": "find-cypress-specs --names",
		"count:by:tags": "find-cypress-specs --tags",
		"cy:split:1": "SPLIT=3 SPLIT_INDEX=0 npx cypress run 2>/dev/null",
		"cy:split:2": "SPLIT=3 SPLIT_INDEX=1 npx cypress run 2>/dev/null",
		"cy:split:3": "SPLIT=3 SPLIT_INDEX=2 npx cypress run 2>/dev/null",
		"cy:split:all": "concurrently \"npm run cy:split:1\" \"npm run cy:split:2\" \"npm run cy:split:3\"",
		"merge-reports": "npx mochawesome-merge reports/html/.jsons/*.json -o reports/html/merged-report.json",
		"generate-report": "npx marge reports/html/merged-report.json -o reports/html",
		"post-test": "npm run merge-reports && npm run generate-report"
	},
	"keywords": [],
	"author": "Victor Lustoza",
	"license": "ISC",
	"type": "commonjs",
	"dependencies": {
		"@cypress/grep": "^5.0.0",
		"@faker-js/faker": "^10.1.0",
		"concurrently": "^9.2.1",
		"cypress": "^15.7.0",
		"cypress-mochawesome-reporter": "^4.0.2",
		"cypress-plugin-api": "^2.11.2",
		"cypress-split": "^1.24.25",
		"find-cypress-specs": "^1.54.8"
	}
}
